<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aleksandrasalak.aplikacjamobilna.Logowanie.MainActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        android:background="@drawable/tlo"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="49dp"
            android:text="Login" />

        <EditText
            android:id="@+id/loginEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:ems="10"
            android:inputType="textPersonName" />




        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp"
            android:text="Hasło"
            android:layout_below="@+id/loginEdit"
            android:layout_alignRight="@+id/textView4"
            android:layout_alignEnd="@+id/textView4" />

        <EditText
            android:id="@+id/hasloEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:layout_below="@+id/textView6"
            android:layout_alignLeft="@+id/loginEdit"
            android:layout_alignStart="@+id/loginEdit" />


        <Button
            android:id="@+id/zalogujBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hasloEdit"
            android:layout_centerHorizontal="true"
            android:onClick="obslugaZdarzenAktywnosciGlownej"
            android:text="Zaloguj" />



        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Powtórz hasło"
            android:layout_below="@+id/zalogujBtn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp" />

        <EditText
            android:id="@+id/haslo2Edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:layout_below="@+id/textView7"
            android:layout_alignLeft="@+id/hasloEdit"
            android:layout_alignStart="@+id/hasloEdit"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/zarejestrujBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/haslo2Edit"
            android:layout_centerHorizontal="true"
            android:onClick="obslugaZdarzenAktywnosciGlownej"
            android:text="Zarejestruj" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
