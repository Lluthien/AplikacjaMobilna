<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/tlo2"
    tools:context="com.example.aleksandrasalak.aplikacjamobilna.Logowanie.MainActivity">

    <RelativeLayout
        android:id="@+id/kont"
        android:layout_width="0dp"
        android:layout_height="495dp"
        android:scaleType="centerCrop"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.498">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/loginEdit"
            android:layout_marginBottom="30dp"

            android:orientation="horizontal"
            app:srcCompat="@drawable/logo" />

        <EditText
            android:id="@+id/loginEdit"
            android:layout_width="wrap_content"
            android:layout_height="55sp"
            android:layout_above="@+id/hasloEdit"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="75dp"
            android:background="@drawable/ciemniej"
            android:elegantTextHeight="true"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:hint="Login"
            android:includeFontPadding="false"
            android:inputType="textPersonName"
            android:scaleX="1"
            android:scaleY="1"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textColorHighlight="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textColorLink="@android:color/white"
            android:textCursorDrawable="@android:color/white"
            android:textSize="19sp">

        </EditText>


        <EditText
            android:id="@+id/hasloEdit"
            android:layout_width="wrap_content"
            android:layout_height="55sp"
            android:layout_above="@+id/zalogujBtn"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="75dp"
            android:background="@drawable/ciemniej"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:hint="Hasło"
            android:inputType="textPassword"
            android:scaleX="1"
            android:scaleY="1"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textColorHighlight="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textColorLink="@android:color/white"
            android:textCursorDrawable="@android:color/white"
            android:textSize="19sp">

        </EditText>


        <Button
            android:id="@+id/zalogujBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/haslo2Edit"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleX="0.7"
            android:scaleY="0.5"
            android:layout_marginBottom="0dp"
            android:background="@drawable/loguj"
            android:onClick="obslugaZdarzenAktywnosciGlownej" />


        <EditText
            android:id="@+id/haslo2Edit"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_above="@+id/zarejestrujBtn"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="90dp"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="75dp"
            android:background="@drawable/ciemniej"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:hint="Powtórz hasło"
            android:inputType="textPassword"
            android:scaleX="1"
            android:scaleY="1"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textColorHighlight="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textColorLink="@android:color/white"
            android:textCursorDrawable="@android:color/white"
            android:textSize="19sp" />

        <Button
            android:id="@+id/zarejestrujBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/zarejestruj"
            android:onClick="obslugaZdarzenAktywnosciGlownej"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"

            android:scaleX="0.7"
            android:scaleY="0.5
"/>


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/login"
            android:layout_alignLeft="@+id/loginEdit"
            android:layout_alignStart="@+id/loginEdit"
            android:layout_below="@+id/imageView5"
            android:layout_alignBottom="@+id/loginEdit" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/lock"
            android:layout_alignTop="@+id/hasloEdit"
            android:layout_alignBottom="@+id/hasloEdit"
            android:layout_alignLeft="@+id/hasloEdit"
            android:layout_alignStart="@+id/hasloEdit" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/lock"
            android:layout_below="@+id/zalogujBtn"
            android:layout_alignLeft="@+id/haslo2Edit"
            android:layout_alignStart="@+id/haslo2Edit"
            android:layout_alignBottom="@+id/haslo2Edit" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
